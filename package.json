{
	"name": "svelte-flatpickr-plus",
	"version": "1.0.4",
	"description": "Flatpickr is a lightweight and powerful datetime picker. Svelte Flatpickr Plus is a wrapper for Flatpickr with some extra features.",
	"homepage": "https://github.com/kodaicoder/svelte-flatpickr-plus",
	"bugs": {
		"url": "https://github.com/kodaicoder/svelte-flatpickr-plus/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/kodaicoder/svelte-flatpickr-plus"
	},
	"keywords": [
		"svelte",
		"sveltekit",
		"svelte action",
		"datepicker",
		"date  picker",
		"monthpicker",
		"month picker",
		"daterangepicker",
		"date range picker",
		"monthrangepicker",
		"month range picker"
	],
	"author": "kodaicoder <https://github.com/kodaicoder>",
	"license": "MIT",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"default": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"svelte": "^4.0.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^2.1.0",
		"@sveltejs/kit": "^1.22.6",
		"@sveltejs/package": "^2.2.1",
		"eslint": "^8.47.0",
		"eslint-config-prettier": "^8.10.0",
		"eslint-plugin-svelte": "^2.32.4",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.1",
		"publint": "^0.1.16",
		"svelte": "^4.2.0",
		"svelte-check": "^3.5.0",
		"tslib": "^2.6.1",
		"typescript": "^5.1.6",
		"vite": "^4.4.9"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"dependencies": {
		"flatpickr_plus": "^1.1.10",
		"postcss": "^8.4.31",
		"postcss-import": "^15.1.0",
		"svelte-preprocess": "^5.0.4"
	}
}
